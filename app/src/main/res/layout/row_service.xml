<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvServiceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvServiceLastWorked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="last worked 28 Jul 2014"
            android:textColor="#64000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvServiceRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$25.00/hour"
            android:textColor="#64000000"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvServiceOutstandingBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="$150.00"
            android:textColor="#ff07af08"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="outstanding"
            android:textColor="#64000000"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>