<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.camirwin.invoicetracker" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.ClientsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CreateClientActivity"
            android:label="@string/title_activity_create_client"
            android:parentActivityName=".activity.ClientsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.camirwin.invoicetracker.ClientsActivity" />
        </activity>
        <activity
            android:name=".activity.ClientActivity"
            android:label="@string/title_activity_client"
            android:parentActivityName=".activity.ClientsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.camirwin.invoicetracker.ClientsActivity" />
        </activity>
    </application>

</manifest>
