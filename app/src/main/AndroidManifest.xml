<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.camirwin.invoicetracker" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/overtime_big"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.ClientsActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name=".activity.ClientCreateActivity"
            android:label="@string/title_activity_create_client"
            android:launchMode="singleTop"
            android:parentActivityName=".activity.ClientsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.camirwin.invoicetracker.activity.ClientsActivity" />
        </activity>
        <activity
            android:name=".activity.ClientActivity"
            android:label="@string/title_activity_client"
            android:launchMode="singleTop"
            android:parentActivityName=".activity.ClientsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.camirwin.invoicetracker.activity.ClientsActivity" />
        </activity>
        <activity
            android:name=".activity.ServiceCreateActivity"
            android:label="@string/title_activity_service_create"
            android:launchMode="singleTop"
            android:parentActivityName=".activity.ClientActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.camirwin.invoicetracker.activity.ClientActivity" />
        </activity>
        <activity
            android:name=".activity.ServiceActivity"
            android:label="@string/title_activity_service"
            android:launchMode="singleTop"
            android:parentActivityName=".activity.ClientActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.camirwin.invoicetracker.activity.ClientActivity" />
        </activity>
        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
